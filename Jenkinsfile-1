

pipeline {
    agent any
    stages {
        stage('Install Maven') {
            steps {
                // install Maven on the Jenkins agent
                sh 'apt-get update && apt-get install -y sudo'
                sh 'sudo apt-get install -y maven'
            }
        }
        
        stage('Build') {
            steps {
                // build the project with Maven
                sh 'mvn clean package'
            }
        }
        stage('SonarQube analysis') {
            steps {
                // send the binary to SonarQube for analysis
                withSonarQubeEnv('sq-server') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}
