

pipeline {
    agent any
    stages {
     
        stage('Build') {
            steps {
                // build the project with Maven
                sh 'mvn clean package'
            }
        }
        stage('SonarQube analysis') {
            steps {
                // send the binary to SonarQube for analysis
                withSonarQubeEnv('sq-server') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }
}
